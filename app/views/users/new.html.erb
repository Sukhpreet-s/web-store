<div>
  <%= form_with model: @user do |form| %>
    <% if @user.errors.any? %>
      <div style="color: red">
        <ul>
          <% @user.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <div>
      <%= form.label :email %>
      <%= form.email_field :email %>
    </div>
    <div>
      <%= form.label :password %>
      <%= form.password_field :password %>
    </div>
    <div>
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation %>
    </div>
    <div>
      <%= form.label :role %>
      <%= form.select :role, options_for_select([['Merchant', 'merchant'], ['Customer', 'customer']]) %>
    </div>
    <div>
      <%= form.submit "Sign Up" %>
    </div>
  <% end %>

</div>
